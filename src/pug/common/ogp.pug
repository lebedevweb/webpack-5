//OGP main
// Заголовок страницы
meta(property="og:title" content= title)
// Описание страницы
meta(property="og:description" content= description)
// Название сайта
meta(property="og:site_name" content= sitename)
// Тип ресурса по умолчанию "website"
meta(property="og:type" content="website")
//Локализация сайта
meta(property="og:locale" content="ru_RU")
// canonical url страницы
meta(property="og:url" content= url)
// Изображение предпросмотра
meta(property="og:image" content= url + "/images/preview.jpg")
// Тип изображения согласно MIME
meta(property="og:image:type" content="image/png")
//Расшифровка изображения
// Альтарнативный текст изображения
meta(property="og:image:alt" content= sitename)
// Размер изображения. Идеальный 968 х 504, подходит для вставки в любые. Используется при публикации ссылки в социальных сетях и мессенджерах при отправке собеседнику.
meta(property="og:image:width" content="968")
meta(property="og:image:height" content="504")
// Статистика FB. Вставляется id аккаунта FB для просмотра статистики сайта.
meta(property="fb:app_id" content="ID")
//End ogp main
